<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="category_third_party"
        android:title="Third-party libraries">

        <PreferenceScreen
            android:key="credit_sliding_panel"
            android:summary="TR4Android (original by umano)"
            android:title="AndroidSlidingUpPanel">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/TR4Android/AndroidSlidingUpPanel"/>
        </PreferenceScreen>

        <PreferenceScreen
            android:key="credit_volley"
            android:summary="The Android Open Source Project"
            android:title="Android Volley">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://android.googlesource.com/platform/frameworks/volley"/>
        </PreferenceScreen>

        <PreferenceScreen
            android:key="credit_autofit_text"
            android:summary="grantland"
            android:title="AutoFitTextView">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/grantland/android-autofittextview"/>
        </PreferenceScreen>

        <PreferenceScreen
            android:key="credit_glide"
            android:summary="bumptech"
            android:title="Glide">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/bumptech/glide"/>
        </PreferenceScreen>

        <PreferenceScreen
            android:key="credit_volley_integration"
            android:summary="bumptech"
            android:title="Glide-volley integration library">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/bumptech/glide/wiki/Integration-Libraries"/>
        </PreferenceScreen>

        <PreferenceScreen
            android:key="credit_date_picker"
            android:summary="wdullaer"
            android:title="MaterialDateTimePicker">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/wdullaer/MaterialDateTimePicker"/>
        </PreferenceScreen>

        <PreferenceScreen
            android:key="credit_text_justify"
            android:summary="bluejamesbond"
            android:title="TextJustify-Android">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/bluejamesbond/TextJustify-Android"/>
        </PreferenceScreen>

        <PreferenceScreen
            android:key="credit_touch_imageview"
            android:summary="Mike Ortiz"
            android:title="TouchImageView">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/MikeOrtiz/TouchImageView"/>
        </PreferenceScreen>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_stackoverflow"
        android:title="StackOverflow code snippets">
        <PreferenceScreen
            android:key="credit_resize_textview"
            android:summary="M-WaJeEh"
            android:title="AutoResizeTextView">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://stackoverflow.com/questions/5033012/auto-scale-textview-text-to-fit-within
            * -bounds/17782522#17782522"/>
        </PreferenceScreen>
        <PreferenceScreen
            android:key="credit_imageview_fling"
            android:summary="Alex Orlov"
            android:title="ImageView fling gesture">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://stackoverflow.com/questions/4098198/adding-fling-gesture-to-an-image-view-android"/>
        </PreferenceScreen>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_icon"
        android:title="Icon credits">
        <PreferenceScreen
            android:key="credit_icon"
            android:summary="Final design by JeffreyCA, icon elements made by Freepik"
            android:title="App icon">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://www.flaticon.com/packs/space-6"/>
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>