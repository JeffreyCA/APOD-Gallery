<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="category_general"
        android:title="General">
        <!--<ListPreference
            android:key="load_hd"
            android:title="Image quality"
            android:entries="@array/list_image_quality"
            android:dialogTitle="Image quality"
            android:defaultValue="0"
            android:entryValues="@array/list_values"/>-->
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/list_image_quality"
            android:entryValues="@array/list_values"
            android:key="image_quality"
            android:summary="HD images take more time and Internet usage to load "
            android:title="Image quality"/>
        <SwitchPreference
            android:key="display_credits"
            android:summary="Photo credits displayed below image description."
            android:title="Display photo credits"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_storage"
        android:title="Storage">
        <EditTextPreference
            android:key="download_location"
            android:title="Download location"
            android:summary="/sdcard/APOD/"/>
        <Preference
            android:key="clear_cache"
            android:title="Clear image cache"/>
        <Preference
            android:key="clear_downloads"
            android:title="Clear saved images"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_about"
        android:title="About">
        <PreferenceScreen
            android:key="open_source"
            android:summary="View third-party resources used in this app"
            android:title="Open-source libraries">
            <intent
                android:targetClass="jeffrey.astronomypictureofthedaynasa.CreditsActivity"
                android:targetPackage="jeffrey.astronomypictureofthedaynasa"/>
        </PreferenceScreen>

        <PreferenceScreen
            android:key="developer"
            android:summary="JeffreyCA"
            android:title="Developer">
        </PreferenceScreen>

        <PreferenceScreen
            android:key="version"
            android:summary="0.3b"
            android:title="App Version">
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>